<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin_small"
    app:cardCornerRadius="@dimen/corner_radius_small"
    app:contentPadding="@dimen/corner_radius_small">
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageDeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_standart"
        android:layout_marginLeft="@dimen/text_margin_standart"
        android:layout_marginTop="@dimen/text_margin_standart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titleDeal"
        android:layout_width="136dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/text_margin_standart"
        android:layout_marginLeft="@dimen/text_margin_standart"
        android:layout_marginTop="@dimen/text_margin_standart"
        app:layout_constraintStart_toEndOf="@+id/imageDeal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionDeal"
        android:layout_width="138dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/text_margin_standart"
        android:layout_marginLeft="@dimen/text_margin_standart"
        android:layout_marginTop="@dimen/text_margin_standart"
        app:layout_constraintStart_toEndOf="@+id/imageDeal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toBottomOf="@+id/titleDeal" />

    <TextView
        android:id="@+id/priceDeal"
        android:layout_width="101dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/text_margin_standart"
        android:layout_marginLeft="@dimen/text_margin_standart"
        android:layout_marginEnd="@dimen/text_margin_standart"
        android:layout_marginRight="@dimen/text_margin_standart"
        android:layout_marginBottom="@dimen/text_margin_standart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toEndOf="@+id/descriptionDeal" />
   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>